<Window
    x:Class="AvReckoner.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AvReckoner.ViewModels"
    Title="Simple Navigation Example"
    Width="400"
    Height="300"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:DataType="vm:MainWindowViewModel"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--
        This is the most important part of the view.
        It displays the correct View based on the data type
        of the CurrentViewModel property.
    -->
    <ContentControl Content="{Binding CurrentViewModel}" />

</Window>
