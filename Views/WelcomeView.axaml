<UserControl
    x:Class="AvReckoner.Views.WelcomeView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AvReckoner.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:WelcomeViewModel"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Spacing="15">
        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Text="{Binding Greeting}" />
        <Button
            HorizontalAlignment="Stretch"
            Command="{Binding NavigateToPage1Command}"
            Content="Go to Page 1" />
        <Button
            HorizontalAlignment="Stretch"
            Command="{Binding NavigateToPage2Command}"
            Content="Go to Page 2" />
        <Button
            HorizontalAlignment="Stretch"
            Command="{Binding NavigateToPage3Command}"
            Content="Go to Page 3" />
    </StackPanel>

</UserControl>
