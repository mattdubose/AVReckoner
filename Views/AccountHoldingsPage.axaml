<UserControl
    x:Class="Reckoner.Views.AccountHoldingsPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mod="clr-namespace:Reckoner.Models"
    xmlns:vm="clr-namespace:Reckoner.ViewModels"
    x:Name="RootPage"
    x:DataType="vm:AccountHoldingsViewModel">

    <!--  Define three rows: Toggle buttons, Search/Add (edit mode), Holdings list (scrollable)  -->
    <Grid
        Margin="10"
        RowDefinitions="Auto,Auto,*"
        RowSpacing="12">

        <!--  Row 0: Account info, Balances, then Buttons  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,12"
            Spacing="8">

            <!--  Line 1: Account number and balances  -->
            <Grid Margin="0,10" ColumnDefinitions="*,*,*,*">

                <!--  Account label + number  -->
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="{Binding AccountNumber, StringFormat='Account: {0}'}" />

                <!--  Asset Balance  -->
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="{Binding AssetBalance, StringFormat='Asset Balance: {0:C}'}" />

                <!--  Cash Balance  -->
                <TextBlock
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="{Binding CashBalance, StringFormat='           Cash Balance: {0:C}'}" />

                <!--  Placeholder  -->
                <TextBlock Grid.Column="3" />
            </Grid>

            <!--  Line 3: Buttons  -->
            <StackPanel Orientation="Horizontal" Spacing="20">
                <Button
                    Command="{Binding ToggleEditModeCommand}"
                    Content="Make Changes"
                    IsVisible="{Binding !IsEditMode}" />

                <Button
                    Command="{Binding SaveChangesCommand}"
                    Content="Save Changes"
                    IsVisible="{Binding IsEditMode}" />

                <Button Command="{Binding OpenSimulationCommandCommand}" Content="Simulate Contributions" />

            </StackPanel>
        </StackPanel>

        <!--  Row 1: Search + Add (only when editing)  -->
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            IsVisible="{Binding IsEditMode}"
            Spacing="8">

            <!--  Centered SearchBar  -->
            <TextBox
                Width="300"
                Background="White"
                Foreground="Black"
                Text="{Binding SearchText}"
                Watermark="Type ticker or name…" />

            <!--  Centered Add button  -->
            <Button
                HorizontalAlignment="Center"
                Command="{Binding AddSelectedItemCommand}"
                Content="Add"
                IsEnabled="{Binding IsAddButtonClickable}" />

            <!--  Filtered search results, limited height  -->
            <ListBox
                Width="300"
                MaxHeight="120"
                Margin="0,5,0,0"
                ItemsSource="{Binding FilteredStocks}"
                SelectedItem="{Binding SelectedStock, Mode=TwoWay}"
                SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="mod:MarketSecurity">
                        <Border
                            Margin="5"
                            Padding="5"
                            CornerRadius="6">
                            <StackPanel>
                                <TextBlock
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Text="{Binding TickerSymbol}" />
                                <TextBlock FontSize="12" Text="{Binding Name}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!--  Row 2: Holdings Table (fills remaining space, scrolls)  -->
        <Grid
            Grid.Row="2"
            IsVisible="True"
            RowDefinitions="Auto,*">

            <!--  Header Row  -->
            <Grid
                Margin="8"
                Background="#EFEFEF"
                ColumnDefinitions="2*,3*,1*,1*">
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Text="Symbol" />
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Text="Name" />
                <TextBlock
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Text="Shares" />
                <TextBlock
                    Grid.Column="3"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Text="Contribution (%)" />
            </Grid>

            <!--  Scrollable ItemsControl  -->
            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding Holdings}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="mod:SecurityHolding">
                            <Grid
                                Margin="10"
                                ColumnDefinitions="2*,3*,1*,1*"
                                ColumnSpacing="10">
                                <!--  Symbol (read-only)  -->
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="{Binding TickerSymbol}" />

                                <!--  Name (read-only)  -->
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Text="{Binding Name}" />

                                <!--  NumberOfShares (editable when IsReadWrite)  -->
                                <TextBox
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    IsEnabled="{Binding $parent[UserControl].DataContext.IsEditMode}"
                                    Text="{Binding NumberOfShares, Mode=TwoWay}">
                                    <!--  Numeric validation handled in code-behind or converter  -->
                                </TextBox>

                                <!--  ContributionPercentage (editable when IsReadWrite)  -->
                                <TextBox
                                    Grid.Column="3"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    IsEnabled="{Binding $parent[UserControl].DataContext.IsEditMode}"
                                    Text="{Binding ContributionPercentageX100, Mode=TwoWay}">
                                    <!--  Numeric validation handled in code-behind or converter  -->
                                </TextBox>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>