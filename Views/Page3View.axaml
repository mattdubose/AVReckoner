<UserControl
    x:Class="AvReckoner.Views.Page3View"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AvReckoner.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:Page3ViewModel"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Spacing="20">
        <TextBlock FontSize="64" Text="{Binding HeaderText}" />

        <!--  This binding finds the parent Window and binds to the GoBackCommand on its DataContext  -->
        <!--  This binding finds the parent Window, casts its DataContext, and then binds to the command  -->
        <Button
            Command="{Binding GoBackCommand}"
            Content="Go Back"
            IsEnabled="{Binding GoBackCommand.CanExecute}" />
    </StackPanel>

</UserControl>
